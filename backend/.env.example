# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/rightbridge

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Email Configuration
EMAIL_SERVICE=gmail  # or your email service provider
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=RightBridge <noreply@rightbridge.com>

# Application URLs
CLIENT_URL=http://localhost:3000
SUPPORT_EMAIL=support@rightbridge.com
ADMIN_EMAIL=admin@rightbridge.com

# File Upload (if needed)
MAX_FILE_UPLOAD=10
FILE_UPLOAD_PATH=./public/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per windowMs
